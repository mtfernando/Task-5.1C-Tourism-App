<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DestinationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_marginLeft="5dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/destinationImageView"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/fragmentHeadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-black"
            android:text="@string/headingText"
            android:textColor="#000000"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/fragmentSubHeadingTextView"
            android:layout_width="350dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/subHeadingText"
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout>

</FrameLayout>